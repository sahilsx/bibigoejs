    min-height: 100vh;
    color: #262626;
  }

  a {
    text-decoration: none;
    color: #0095f6;
  }

  /* Navbar styles */

  /* Main content styling */
  .content {
    text-align: center;
    margin-top: 3rem;
  }

  .welcome-text {
    font-size: 1.5rem;
    font-weight: bold;
  }

  .welcome-message {
